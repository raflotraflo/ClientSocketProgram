        <Label x:Name="label2" Content="Label 2" HorizontalAlignment="Left" Height="26" Margin="10,154,0,0" VerticalAlignment="Top" Width="497"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="88" Margin="10,180,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="button1" Content="Send message to Server" Click="button1_Click" HorizontalAlignment="Left" Height="25" Margin="358,285,0,0" VerticalAlignment="Top" Width="149"/>
        
        <Ellipse x:Name="controlEllipse" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="36" Stroke="Black" VerticalAlignment="Top" Width="36" Margin="481,0,0,0"/>

    </Grid>
